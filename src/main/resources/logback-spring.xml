<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Console -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File riêng cho SecurityUtils -->
    <appender name="SECURITY_UTILS" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/security-utils.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/security-utils-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File riêng cho FormatResponse -->
    <appender name="FORMAT_RESPONSE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/format-response.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/format-response-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File riêng cho CustomUserDetailsService -->
    <appender name="CUSTOM_USER_DETAILS" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/custom-user-details.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/custom-user-details-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Logger riêng -->
    <logger name="com.minh.shopee.services.utils.SecurityUtils" level="DEBUG" additivity="false">
        <appender-ref ref="SECURITY_UTILS"/>
    </logger>

    <logger name="com.minh.shopee.services.utils.FormatResponse" level="DEBUG" additivity="false">
        <appender-ref ref="FORMAT_RESPONSE"/>
    </logger>

    <logger name="com.minh.shopee.services.utils.CustomUserDetailsService" level="DEBUG" additivity="false">
        <appender-ref ref="CUSTOM_USER_DETAILS"/>
    </logger>

    <!-- Root vẫn dùng console -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>
